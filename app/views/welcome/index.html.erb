<div class="container mx-auto flex flex-row h-full">
  <div class="basis-1/4 h-full w-1/6 sidebar size-full">
    <%= image_tag 'main-photo.jpg' %>
    <% ['education', 'job experience', 'contributions', 'articles'].each do |section| %>
      <div class="mt-5">
        <a href="#<%= section.dasherize %>"
           class="mx-5 block font-bold px-3 py-2 text-slate-700 rounded-lg hover:bg-slate-100 hover:text-slate-900">
          <%= section.humanize %>
        </a>
      </div>
    <% end %>
  </div>
  <div class="grow h-full ml-5">
    <%= render 'header' %>
    <%= render 'education' %>
  </div>
</div>